.panel.panel-default
  .panel-heading
    %h3.panel-title= t('general')
  .panel-body
    %dl.dl-horizontal
      %dt= t('name')
      %dd= @contact.name

      %dt= t('org_name')
      %dd= @contact.org_name

      %dt= t('code')
      %dd= @contact.code

      %dt= t('ident')
      %dd= @contact.ident

      %dt= t('ident_type')
      %dd= @contact.ident_type

      %dt= t('email')
      %dd= @contact.email

      %dt= t('phone')
      %dd= @contact.phone

      - if @contact.fax
        %dt= t('fax')
        %dd= @contact.fax

      %dt= t('password')
      %dd= @contact.auth_info
