= render 'shared/title', name: t(:domains)

%hr
.row
  .col-md-12
    .table-responsive
      %table.table.table-hover.table-bordered.table-condensed
        %thead
          %tr
            %th{class: 'col-xs-2'}
              = t(:name)
            %th{class: 'col-xs-2'}
              = t(:registrant)
            %th{class: 'col-xs-2'}
              = t(:valid_to)
            %th{class: 'col-xs-2'}
              = t(:registrar)
        %tbody
          - @domains.each do |x|
            %tr
              %td= x
              %td= x.registrant
              %td= l(x.valid_to, format: :short)
              %td= x.registrar
