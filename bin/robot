#!/bin/bash
#
# Update repo 
#

# default locations
export LANGUAGE=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# cd to Rails root directory
cd "$(dirname "$0")"; cd ..

git pull origin master &> /dev/null
git reset --hard &> /dev/null
unset GIT_DIR GIT_WORK_TREE

bin/robot-audit
